<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button android:id="@+id/diffUtilBtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="DiffUtil"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"/>
    <Button android:id="@+id/asyncListDifferBtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/diffUtilBtn"
            app:layout_constraintLeft_toLeftOf="@id/diffUtilBtn"
            app:layout_goneMarginTop="100dp"
            android:text="AsyncListDiffer"
            android:textAllCaps="false"/>
    <Button android:id="@+id/listAdapterBtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/asyncListDifferBtn"
            app:layout_constraintLeft_toLeftOf="@id/asyncListDifferBtn"
            android:text="ListAdapter"
            android:textAllCaps="false"/>
    <Button android:id="@+id/sortedListBtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/listAdapterBtn"
            app:layout_constraintLeft_toLeftOf="@id/asyncListDifferBtn"
            app:layout_goneMarginTop="100dp"
            android:text="SortedList"
            android:textAllCaps="false"/>

</android.support.constraint.ConstraintLayout>